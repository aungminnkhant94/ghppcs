<script>
  AOS.init({
        duration: 1000,
      });

  var i = 0;
        function read() {
            if (!i) {
                document.getElementById("contact-form").style.display = "inline";
                i = 1;
            } else {
                document.getElementById("contact-form").style.display = "none";
                i = 0;
            }
        }
